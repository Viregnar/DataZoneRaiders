    "rules": {
        "ambush_tactics": {
            "name": "Ambush Tactics",
            "description": "All zone stalkers gain +2 bonus for attacks made while under stealth or superior stealth.",
            "points": 0
        },
        "aptitude_stealth": {
            "name": "Aptitude check",
            "description": "Action: Make an aptitude check to gain or regain Stealth.",
            "points": 0
        },
        "taking_out_basic_move_action": {
            "name": "Gain basic move action",
            "description": "Taking Out an Enemy grants an immediate basic move action.",
            "points": 0
        },
        "perform_stealth": {
            "name": "Perform stealth",
            "description": "On a 12+, Shooting attacks do not cause Stealth to be lost.",
            "points": 0
        },
        "explosive_trap": {
            "name": "Explosive Trap",
            "description": "Action: Place a Trap token in base contact with the model. Any enemy model that moves within 4 inches and LOS of the Trap token suffers an automatic Shooting attack from an N-3 Charges weapon using a Shooting stat of 8, then remove the token from play.",
            "flavor": "Single Use: May be used only once Per Battle",
            "points": 20
        },
        "self_replenishing_smoke": {
            "name": "Self-Replenishing (SR) Smoke",
            "description": "Operates as the Smoke Canisters equipment item, but the Cloud is only removed on a roll of 17+.",
            "flavor": "Single Use: May be used only once Per Battle",
            "points": 15
        },
        "rangefinder_scope": {
            "name": "Rangefinder Scope",
            "description": "Allows Aimed Attack Action with an additional 6-inch range bonus to Primary Weapons.",
            "points": 25
        }
    },
    "strategies": [
        {
            "name": "Explosive Surprise",
            "description": "Trespassers and Troubleshooters may equip N-3 Charges for free at the start of the game.",
            "cost": "Tech 4"
        },
        {
            "name": "Shredder Rounds ",
            "description": "Vesper Rifles and Interdiction Rifles gain Rupturing. Additionally, Interdiction Rifles lose Bulky. ",
            "cost": "Tech 8"
        },
        {
            "name": "Deep Infiltration",
            "description": "One model may gain Forward Positioning skill for this mission.",
            "cost": "Bio 2"
        },
        {
            "name": "Lightweight Composites",
            "description": "All Stalker models gain +2 to their Defense stat while this Doctrine is enabled.",
            "cost": "Bio 6"
        },
        {
            "name": "Ambush Mastery",
            "description": "Replaces Ambush Tactics. All Zone Stalkers gain +4 bonus for attacks made while under Stealth or Superior Stealth. Additionally, the attack gains +2 Strength.",
            "cost": "Tactics 4"
        },
        {
            "name": "One Shot, One Kill",
            "description": "Aimed Attack Actions grant the attacker the Headshot skill until the end of the attack.",
            "cost": "Tactics 6"
        }
    ]
